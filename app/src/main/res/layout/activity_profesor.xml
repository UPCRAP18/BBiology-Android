<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".Profesor">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:text="@string/lblWelcome"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:text="@string/lblHorario"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spHoras"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="3"
                android:dropDownWidth="match_parent"
                android:spinnerMode="dropdown"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/lblDia"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txteFecha"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textSize="18sp"
                android:inputType="text"
                android:importantForAutofill="no" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:text="@string/lblPractStatus"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgStatusPract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdPractYes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:bufferType="normal"
                    android:checked="true"
                    android:text="@string/lblSi"
                    android:textAlignment="textStart"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rdPractNo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:text="@string/lblNo"
                    android:textAlignment="textStart"
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/lblGrupo"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtGrupo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="@string/htGrupo"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:baselineAligned="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbMuestrasFijas"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/lblMuestras"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/cbMatCompleto"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/lblMateriales"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/cbManualCompleto"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/lblManualCompleto"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbPuntProf"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:gravity="center"
                        android:text="@string/lblPuntualidadP"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/cbPuntAsist"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/lblPuntualidadA"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/cbBata"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:text="@string/lblBata"
                        android:textAlignment="center"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/lblAsistAux"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgAsistAux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:checkedButton="@id/rdAuxNo"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdAuxYes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/lblSi"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rdAuxNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/lblNo"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/lblAsistServ"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgAsistServ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:checkedButton="@id/rdServNo"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdServYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/lblSi"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rdServNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/lblNo"
                    android:textSize="20sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/lblPuntualidadAlumno"
                android:textAlignment="center"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rgPuntAlumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:checkedButton="@id/rdAlumnNo"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdAlumnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:checked="false"
                    android:text="@string/lblSi"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/rdAlumnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="@string/lblNo"
                    android:textSize="20sp" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_weight="1"
                    android:text="@string/lblPractSel"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spPractica"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPrev"
                    android:layout_width="140dp"
                    android:layout_height="52dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/round_button_white_blue"
                    android:text="@string/btnPrev"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnPrevMat"
                    android:layout_width="140dp"
                    android:layout_height="52dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/round_button_white_blue"
                    android:onClick="sendMatInfo"
                    android:text="@string/btnMateriales"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="@string/lblComentarios"
            android:textAlignment="center"
            android:textColor="@color/colorTextPrimary"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtComentarios"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_margin="8dp"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/btnSaveConfig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/add" />

    </LinearLayout>

</ScrollView>